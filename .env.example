# Application
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Elastic APM (Application Performance Monitoring)
APM_SERVICE_NAME=payment-service-v2
APM_SERVER_URL=https://apm.konga.com
APM_SERVICE_ENVIRONMENT=development
ELASTIC_APM_ACTIVE=false
ELASTIC_APM_LOG_LEVEL=info

# MySQL Database
DATABASE_TYPE=mysql
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=kongapay_user
DATABASE_PASSWORD=password
DATABASE_NAME=kongapay-payment

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# JWT
JWT_SECRET=your-super-secret-jwt-key

# Payment Providers
# Paystack
PAYSTACK_BASE_URL=https://api.paystack.co
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
PAYSTACK_WEBHOOK_SECRET=your_paystack_webhook_secret
PAYSTACK_TIMEOUT=30000

# Stanbic IBTC
STANBIC_BASE_URL=https://api.stanbicibtc.com
STANBIC_CLIENT_ID=your_stanbic_client_id
STANBIC_CLIENT_SECRET=your_stanbic_client_secret
STANBIC_TIMEOUT=30000

# Klump
KLUMP_BASE_URL=https://api.klump.com
KLUMP_SECRET_KEY=your_klump_secret_key
KLUMP_TIMEOUT=30000

# Flutterwave
FLUTTERWAVE_BASE_URL=https://api.flutterwave.com
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key
FLUTTERWAVE_TIMEOUT=30000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Fee Configuration
DEFAULT_FEE_PERCENTAGE=1.5
DEFAULT_FEE_CAP=2000

# Encryption
ENCRYPTION_ALGORITHM=aes-256-cbc
ENCRYPTION_SECRET_KEY=your-32-character-encryption-key

# SDK
SDK_BASE_URL=https://checkout.kongapay.com